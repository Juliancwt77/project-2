    <tbody>


      <% allJobs.forEach(function(job) { %>


      <tr>
      
        <td><%= job.local.created %></td>
        <td><%= job.local.title %></td>
        <td><%= job.local.salary%></td>
        <td><%= job.local.description%></td>
        <th><%= job.local.candidate.length%></th>
        <td></td>
        <td><a class="btn btn-warning btn-sm" href="/recruiters/posting/<%=job.id%>/edit" role="button">Edit</a></td>
        <td><form method="post" action="/recruiters/posting/<%=job.id%>?_method=DELETE">
        <button class="btn btn-danger btn-sm " name="submit" type="submit">
        Delete
        </button>

        </form>
        </tr>

      <% }) %>
